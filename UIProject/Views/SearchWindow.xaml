<Window x:Class="UIProject.Views.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIProject.Views"
        xmlns:windowVM="clr-namespace:UIProject.ViewModels.LayoutViewModels"
        mc:Ignorable="d"
        Title="SearchWindow"
        WindowStyle="None"
        Style="{StaticResource CustomDialogWindowStyle}">
    <Window.DataContext>
        <windowVM:DialogWindowViewModel/>
    </Window.DataContext>
    <Grid Background="{Binding Background}">
        <ListBox x:Name="PART_ListBox"
                 ItemTemplate="{StaticResource ProductItemSearchTemplate}"
                 ItemsSource="{Binding}"/>
    </Grid>
</Window>
