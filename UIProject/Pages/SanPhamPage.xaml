                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0"
                                   Content="Loại SP"/>
                            <Label Grid.Row="1" Grid.Column="0"
                                   Content="Số lượng"/>
                            <Label Grid.Row="2" Grid.Column="0"
                                   Content="Nhà cung cấp"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Model.TenLoaiSP}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{Binding Model.SoLuong}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       Text="{Binding Model.TenNhaCC}"/>
                        </Grid>
                        <Image DockPanel.Dock="Left"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Source="/Images/software_icon.png"
                                Margin="10 0 20 10"
                                Width="70"
                                Height="70"/>
                        <StackPanel DockPanel.Dock="Right">
                            <TextBlock
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch"
                                       FontSize="20"
                                       TextWrapping="Wrap"
                                       Text="{Binding Content.SelectedItem.Model.TenSP, ElementName=gridProductList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock DockPanel.Dock="Bottom"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch"
                                       FontSize="17"
                                       TextWrapping="Wrap"
                                       Foreground="Gray"
                                       Text="{Binding Content.SelectedItem.Model.MaSP, ElementName=gridProductList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:Card>-->
            </Grid>
        </Grid>
    </Grid>
</Page>
