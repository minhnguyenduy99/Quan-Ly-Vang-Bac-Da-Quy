<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UIProject.Templates.CustomDataTemplates"
                    xmlns:conveters="clr-namespace:UIProject.Converters">
    <conveters:LongStringToThreeDotConverter x:Key="stringConverter"
                                             MaxLength="15"/>
    <DataTemplate x:Key="ProductItemDataTemplate">
        <Grid VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0"
                       Margin="10"
                       HorizontalAlignment="Center"
                       Source="{Binding ProductImageSource}"
                       Height="60"
                       Stretch="Uniform"/>
            <Label Grid.Row="1"
                   Style="{DynamicResource MediumLabelStyle}"
                   HorizontalContentAlignment="Center">
                <TextBlock Text="{Binding ProductName, Converter={StaticResource stringConverter}}"
                           ToolTip="{Binding ProductName}"/>
            </Label>
            <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                <Label Style="{DynamicResource MediumLabelStyle}"
                           FontWeight="Bold"
                           Content="{Binding SinglePrice}"/>
                <Label Style="{DynamicResource MediumLabelStyle}"
                           FontWeight="Bold"
                           Content="{Binding Quantity}"/>
            </StackPanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="ProductItemSearchTemplate">
        <Border BorderBrush="Gray"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="7">
                    <Image Height="15"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Stretch="Uniform"
                           Source="{Binding ProductImageSource}"/>
                </Border>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0"
                           Margin="3"
                           HorizontalContentAlignment="Left"
                           Style="{StaticResource MediumLabelStyle}"
                           Content="{Binding ProductName}"/>
                    <Label Grid.Row="1" Grid.Column="0"
                           Margin="3 0 3 3"
                           HorizontalContentAlignment="Left"
                           Style="{StaticResource MediumLabelStyle}"
                           Content="{Binding ProductOrder}"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           Margin="3"
                           HorizontalContentAlignment="Right"
                           Style="{StaticResource MediumLabelStyle}"
                           Content="{Binding SinglePrice}"/>
                    <Label Grid.Row="1" Grid.Column="1"
                           Margin="3 0 3 3"
                           HorizontalContentAlignment="Right"
                           Style="{StaticResource MediumLabelStyle}"
                           Content="{Binding Quantity, StringFormat=Có thể bán : {0}}"/>
                </Grid>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>